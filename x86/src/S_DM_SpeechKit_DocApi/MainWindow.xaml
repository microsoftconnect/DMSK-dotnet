<Window x:Class="S_SpeechAnywhereDocApi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="258" Width="219" Activated="Window_Activated">
	<Grid>
		<Label Content="User name:" HorizontalAlignment="Left" Margin="22,13,0,0" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="_userName" HorizontalAlignment="Left" Height="23" Margin="22,37,0,0" TextWrapping="Wrap" Text="myuser" VerticalAlignment="Top" Width="165"/>
		<Button Content="Login" HorizontalAlignment="Left" Margin="22,76,0,0" VerticalAlignment="Top" Width="165" Click="LoginButton_Click"/>
		<Button x:Name="_newReport" IsEnabled="False" Content="New report" HorizontalAlignment="Left" Margin="22,128,0,0" VerticalAlignment="Top" Width="165" Click="NewReportButton_Click"/>
		<Button x:Name="_openReport" IsEnabled="False" Content="Open report" HorizontalAlignment="Left" Margin="22,155,0,0" VerticalAlignment="Top" Width="165" RenderTransformOrigin="0.387,0.364" Click="OpenReport_Click"/>
		<TextBox x:Name="_documentId" HorizontalAlignment="Left" Height="23" Margin="22,182,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="165"/>
	</Grid>
</Window>
