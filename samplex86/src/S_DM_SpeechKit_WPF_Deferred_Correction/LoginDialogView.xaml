<Window x:Class="S_DM_SpeechKit_WPF_Deferred_Correction.LoginDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpeechKit Sample - Deferred Correction"
        Width="320" Height="320">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="0" Grid.Row="0" Margin="4" Header="Author" VerticalAlignment="Stretch">
            <Grid Margin="12 0">
                <StackPanel VerticalAlignment="Center">
                    <Label Margin="4" FontSize="14" Content="User ID:"/>
                    <TextBox Margin="4" Padding="3" FontSize="14" x:Name="TbAuthorId"/>
                    <Button Margin="4" FontSize="14" HorizontalAlignment="Right" Content="Logon" Click="LogonAuthor_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Column="0" Grid.Row="1" Margin="4" Header="Correctionist" VerticalAlignment="Stretch">
            <Grid Margin="12 0">
                <StackPanel VerticalAlignment="Center">
                    <Label Margin="4" FontSize="14" Content="User ID:"/>
                    <TextBox Margin="4" Padding="3" FontSize="14" x:Name="TbCorrectionistId"/>
                    <Button Margin="4" FontSize="14" HorizontalAlignment="Right" Content="Logon" Click="LogonCorrectionist_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
